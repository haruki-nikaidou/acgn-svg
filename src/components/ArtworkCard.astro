---
export interface Artwork {
    name: string;
    tags: string[];
    author: string;
    authorLink?: string;
    artworkSrc: string;
}

export interface Props {
    artwork: Artwork;
}

const {name, author, authorLink, artworkSrc} = Astro.props.artwork;

const tags = Astro.props.artwork.tags;
---

<div class="artwork-card">
    <div class="image-container">
        <img src={"/artworks/" + artworkSrc} alt={name}/>
    </div>
    <div class="artwork-info">
        <h3><a href={"/artworks/" + artworkSrc} download={"/artworks/" + artworkSrc}>{name}</a></h3>
        <p class="author">
            by <a href={authorLink} target="_blank">{author}</a>
        </p>
        <ul class="tags">
            {
                tags.map((tag)=> {
                    return <li>{tag}</li>
                })
            }
        </p>
    </div>
</div>

<style>
    .artwork-card {
        width: 100%;
        min-height: 24rem;
        height: 100%;
        background-color: #EFF9FF;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-sizing: border-box;
    }
    @media (prefers-color-scheme: dark) {
        .artwork-card {
            background-color: #3b4244;
        }
    }
    .image-container {
        width: 100%;
        height: 20rem;
        overflow: hidden; 
        display: flex;
        justify-content: center;
        align-items: center;
        padding: .25rem;
        box-sizing: border-box;
        background-color: white;
    }

    .image-container img {
        max-width: 100%;
        max-height: 100%;
    }

    .artwork-info {
        width: 100%;
        padding: .25rem .75rem;
        box-sizing: border-box;
    }

    .artwork-info h3 {
        text-align: center;
    }

    .artwork-info .author {
        font-size: .75em;
        text-align: center;
    }

    .artwork-info .author a {
        text-decoration: underline;
    }

    .tags {
        font-size: .75em;
        margin: .5rem 0;
        list-style-type: none;
        padding-left: 0;
        
    }
    .tags li {
        margin-left: 0;
    }
    .tags li::before {
        content: '# ';
    }
</style>
